<div class="container">
  <div class="form-card  py-4 px-3">
    <div class="form-card-content">
      <h1>Create your cocktail here!</h1>

      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn btn-block btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
