<div class="container mt-5 d-flex cocktail-card">
  <div class ="card-image">
    <% if @cocktail.photo.attached? %> 
      <div class="show-card-category h-90" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 600, crop: :fill %>')">
      </div>
    <% else %> 
      <div class="show-card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://hhp-blog.s3.amazonaws.com/2018/08/iStock-611986658.jpg)">
        <%= link_to @cocktail.name, cocktail_path(@cocktail), class: "btn btn-ghost" %>
      </div>
    <% end %>
  </div>
    <div class="show-card-info d-flex justify-content-between flex-column">
      <div class="ingredients">
          <h2><%= @cocktail.name %></h2>
        <% @cocktail.doses.each do |dose| %>
          <div class="d-flex">
            <div>
              <h4 class='ingredient-text'>
              <%= dose.description %> |  <%=dose.ingredient.name %>
              </h4>
            </div>
              <div>
                <%= link_to destroy_path(dose), method: :delete do %>
                  <i class="mt-2 ml-2 fas fa-trash-alt"></i>
                <% end %>
              </div>
          </div>
        <% end %>
      </div>
        <div class="d-flex-inline m-3">
          <%= link_to "Whats in this drink?",  new_cocktail_dose_path(@cocktail), class: "btn btn-sm btn-secondary mb-2  mt-2" %>
          <%= link_to "Back to drinks list",  cocktails_path, class: "btn btn-sm btn-secondary mb-2 mt-2" %>
        </div>
    </div>
</div>
